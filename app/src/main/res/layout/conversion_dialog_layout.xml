<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="holla"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="8dp"
            android:id="@+id/conversion_summary"
            android:textSize="14sp"/>




        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/crypto_img"
            android:layout_toLeftOf="@id/conv_img"
            android:layout_marginRight="40dp"
            android:layout_below="@id/conversion_summary"
            android:layout_marginTop="4dp"

            android:layout_gravity="center"
            android:src="@drawable/bitcoin"/>

        <EditText
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:hint="0"
            android:textSize="14sp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="2dp"
            android:inputType="number"
            android:layout_below="@id/crypto_img"
            android:layout_toLeftOf="@id/conv_img"
            android:gravity="center"
            android:id="@+id/crypto_c"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="100"
        android:layout_marginLeft="10dp"
        android:textAlignment="center"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="@color/colorAccent"
        android:layout_marginTop="2dp"
        android:layout_below="@id/currency_img"
        android:layout_toRightOf="@id/conv_img"
        android:id="@+id/currency_c"/>


    <ImageView
        android:layout_width="30dp"
        android:layout_height="24dp"
        android:id="@+id/conv_img"
        android:src="@drawable/convert4"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/conversion_summary"
        android:layout_marginTop="25dp"
        android:tint="@color/colorAccent"
        android:layout_gravity="center"/>





    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:id="@+id/currency_img"
        android:layout_toRightOf="@id/conv_img"
        android:layout_alignBottom="@id/crypto_img"

        android:layout_gravity="center"
        android:layout_marginLeft="50dp"
        android:src="@drawable/flagofcanada"/>

    <Button
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:background="@color/colorAccent"
        android:textColor="#ffffff"
        android:id="@+id/convert"
        android:layout_marginTop="5dp"
        android:layout_below="@id/currency_c"
        android:layout_centerHorizontal="true"
        android:textSize="10sp"
        android:text="Convert"/>
</RelativeLayout>
